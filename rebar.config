{erl_opts,
 [
  {src_dirs, ["src"]},
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  warn_missing_spec,
  debug_info
 ]
}.

{deps,
 [
  {systools, ".*", {git, "https://github.com/sdanzan/erlang-systools.git"}},
  {eper, ".*", {git, "https://github.com/massemanet/eper.git"}}
 ]
}.
